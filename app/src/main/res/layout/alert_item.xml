<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dip"
    android:paddingBottom="16dip"
    android:minHeight="72dp"
    android:gravity="center_vertical">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:id="@+id/color_square"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="22dip"
            android:layout_marginStart="22dip" />

              <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_column="1"
             android:layout_gravity="center_vertical|fill_horizontal"
             android:layout_marginEnd="@dimen/agenda_item_right_margin"
             android:layout_row="1"
             android:layout_rowSpan="1"
             android:minHeight="64dp"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/event_title"
                 style="?android:attr/textAppearanceMediumInverse"
                 android:layout_width="wrap_content"
                 android:layout_height="25dp"
                 android:layout_gravity="start|center_vertical"
                 android:layout_marginBottom="2dp"
                 android:layout_marginTop="5.5dp"
                 android:ellipsize="marquee"
                 android:singleLine="true"
                 android:textColor="@color/text_color"
                 android:textSize="@dimen/font_size02" />

             <TextView
                 android:id="@+id/when"
                 style="?android:attr/textAppearanceSmallInverse"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:layout_gravity="start|center_vertical"
                 android:ellipsize="marquee"
                 android:singleLine="true"
                 android:textColor="@color/cale_week_title_color"
                 android:textSize="@dimen/font_size02" />

             <TextView
                 android:id="@+id/where"
                 style="?android:attr/textAppearanceSmallInverse"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:layout_gravity="start|center_vertical"
                 android:layout_marginBottom="5.5dp"
                 android:layout_marginTop="2dp"
                 android:ellipsize="marquee"
                 android:singleLine="true"
                 android:textColor="@color/cale_week_title_color"
                 android:textSize="@dimen/font_size02" />

             <ImageView
                 android:id="@+id/repeat_icon"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_marginStart="5dip"
                 android:clickable="false"
                 android:focusable="false"
                 android:src="@drawable/ic_repeat_dark"
                 android:visibility="gone" />
         </LinearLayout>
    </LinearLayout>
</LinearLayout>
