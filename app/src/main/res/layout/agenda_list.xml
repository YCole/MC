<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_list_layout"
    android:layout_width="match_parent"
    android:layout_height="144dip"
    android:orientation="vertical" >
    
    <View
        android:id="@+id/separator_line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:background="#80000000" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listPreferredItemHeight="72dp" />

    <View
        android:id="@+id/separator_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:background="#30000000" />

    <LinearLayout
        android:id="@+id/noEventLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="36dp" >

        <ImageView
            android:id="@+id/noEventView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/noEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/no_event_title"
            android:textColor="@color/no_event_color"
            android:textSize="18sp" />
    </LinearLayout>
