<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#F1F2F3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_back"
            android:text="@string/menu_preferences"
            android:textColor="#E6000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFBFC3C7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/preferences_function_setting"
                android:textColor="#73000000"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/layout_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gome_calendar_selector"
                android:minHeight="68dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_import_sms"
                        android:textColor="#E6000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_sms_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/preferences_import_sms_info"
                        android:textColor="#73000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_sms"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="#1F000000" />

            <RelativeLayout
                android:id="@+id/layout_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gome_calendar_selector"
                android:minHeight="68dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="55dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_sync_contact"
                        android:textColor="#E6000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_contact_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/preferences_sync_contact_info"
                        android:textColor="#73000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <gm.widget.GomeSwitch
                    android:id="@+id/gs_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_almanac"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="#1F000000" />

            <RelativeLayout
                android:id="@+id/layout_almanac"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/gome_calendar_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/preferences_almanac_taboo"
                    android:textColor="#E6000000"
                    android:textSize="15sp" />

                <gm.widget.GomeSwitch
                    android:id="@+id/gs_almanac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_weather"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="#1F000000" />

            <RelativeLayout
                android:id="@+id/layout_weather"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/gome_calendar_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="@string/preferences_gas_show"
                    android:textColor="#E6000000"
                    android:textSize="15sp" />

                <gm.widget.GomeSwitch
                    android:id="@+id/gs_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FFF1F3F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/preferences_calendar_tools"
                android:textColor="#73000000"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/layout_week"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/gome_calendar_selector" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_week_start_day_dialog"
                        android:textColor="#E6000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_week_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#73000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="20dp"
                android:background="#1F000000"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_account"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="@string/preferences_add_account"
                    android:textColor="#E6000000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FFF1F3F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/preferences_reminder_settings"
                android:textColor="#73000000"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/layout_ring"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/gome_calendar_selector" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_ring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_alerts_ringtone_title"
                        android:textColor="#E6000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_ring_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#73000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_ring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_ring_none"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/preferences_alerts_ringtone_title"
                    android:textColor="#E6000000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_ring_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="#1F000000" />

            <RelativeLayout
                android:id="@+id/layout_vibrate"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_vibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_alerts_vibrateWhen_title"
                        android:textColor="#E6000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_vibrate_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#73000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="#1F000000"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_vibrate_temp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/gome_calendar_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/preferences_alerts_vibrateWhen_title"
                    android:textColor="#E6000000"
                    android:textSize="15sp" />

                <gm.widget.GomeSwitch
                    android:id="@+id/gs_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="#1F000000" />

            <RelativeLayout
                android:id="@+id/layout_alert"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/gome_calendar_selector" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_default_reminder_title"
                        android:textColor="#E6000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_alert_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#73000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
