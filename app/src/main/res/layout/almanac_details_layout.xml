<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/calendar_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/almanac_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="#1157ae"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/tv_title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/almanac_tv_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7.5dp"
                android:textColor="#89000000"
                android:textSize="13dp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#3e000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/icon_yii_iv"
                    android:layout_width="23.5dp"
                    android:layout_height="23.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/icon_yii" />

                <com.hct.calendar.ui.TagFlowLayout
                    android:id="@+id/almanac_yii_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/icon_yii_iv" >
                </com.hct.calendar.ui.TagFlowLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/icon_jii_iv"
                    android:layout_width="23.5dp"
                    android:layout_height="23.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/icon_jii" />

                <com.hct.calendar.ui.TagFlowLayout
                    android:id="@+id/almanac_jii_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/icon_jii_iv" >
                </com.hct.calendar.ui.TagFlowLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#3e000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#3e000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhushen"
                android:textColor="#1157ae"
                android:textSize="15dp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="#3e000000" />

            <TextView
                android:id="@+id/caishen_fangwei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhushen"
                android:textColor="#e5000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/xishen_fangwei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhushen"
                android:textColor="#e5000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fushen_fangwei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhushen"
                android:textColor="#e5000000"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#3e000000" />

        <LinearLayout
            android:id="@+id/almanac_shichen_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="12" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#1157ae"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.5dp"
                android:ems="1"
                android:text="@string/jiazixiong"
                android:textColor="#e5000000"
                android:textSize="13dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="216dp" >
<!--
       <View
            android:id="@+id/almanac_bottom_v"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true" />

            android:layout_above="@id/almanac_bottom_v"
-->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" >

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="#3e000000" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#3e000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/pen_zu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/pengzhubaiji"
                    android:textColor="#1157ae"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_pen_zu_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pen_zu_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/nianhoutext"
                    android:textColor="#e5000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_pen_zu_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pen_zu_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="@string/nianhoutext"
                    android:textColor="#e5000000"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jiuxing_layout"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/relativeLayout" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/tv_taishen_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/taishen"
                    android:textColor="#1157ae"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_taishen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_taishen_v"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/yeartext"
                    android:textColor="#e5000000"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/divide11"
            android:layout_below="@id/jiuxing_layout"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/relativeLayout"
            android:background="#3e000000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/divide11"
            android:layout_toStartOf="@id/relativeLayout" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/tv_xingxiu_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/xingxu"
                    android:textColor="#1157ae"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_xingxiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_xingxiu_v"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/yeartext"
                    android:textColor="#e5000000"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bbb_bt_layout"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_toEndOf="@id/relativeLayout" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/tv_congsha_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/chongsha"
                    android:textColor="#1157ae"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_congsha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_congsha_v"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/yeartext"
                    android:textColor="#e5000000"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/divide22"
            android:layout_below="@id/bbb_bt_layout"
            android:layout_toEndOf="@id/relativeLayout"
            android:background="#3e000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_below="@id/divide22"
            android:layout_toEndOf="@id/relativeLayout" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/almanac_wuxing_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/wuxing"
                    android:textColor="#1157ae"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/almanac_wuxing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/almanac_wuxing_v"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/yeartext"
                    android:textColor="#e5000000"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>