<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:gravity="center_vertical"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:minHeight="56dp"
        android:maxWidth="40dp"
        android:gravity="top"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/almanac_item_color"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="48dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView 
            android:id="@+id/almanac_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:ellipsize="marquee"/>

        <TextView 
            android:id="@+id/almanac_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/almanac_text1"
            android:layout_alignStart="@id/almanac_text1"
            android:singleLine="true"
            android:textSize="14sp"
            android:textAppearance="?attr/android:textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="marquee"/>
            
        <TextView 
            android:id="@+id/almanac_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/almanac_text2"
            android:layout_alignStart="@id/almanac_text2"
            android:singleLine="true"
            android:textSize="14sp"
            android:textAppearance="?attr/android:textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="marquee"/>
    </RelativeLayout>
</LinearLayout>
