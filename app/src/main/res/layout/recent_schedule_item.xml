<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="124dp"
    android:background="#ff1d1d2c"
    android:orientation="horizontal">

    <LinearLayout 
        android:id="@+id/team1_bg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/team1_image"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>
        
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/score"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:textSize="28sp"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/reminder_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:focusable="false"
                 android:background="@drawable/icon_clock_normal"
                 android:layout_gravity="start"/>
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />
                
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff006bbe"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/team2_bg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/team2_image"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>
</LinearLayout>