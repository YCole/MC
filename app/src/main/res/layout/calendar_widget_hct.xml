            android:background="@drawable/widget_corner_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/typeb_calendar_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/typeb_calendar_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="30sp" />

                <RelativeLayout
                    android:id="@+id/typeb_calendar_week_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/typeb_calendar_top_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/typeb_calendar_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/calendar_pre_month_linearlayout"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="54dip"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/calendar_pre_month"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/gome_icon_arrow_left" >
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/calendar_next_month_linearlayout"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dip"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/calendar_next_month"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/gome_icon_arrow_right" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

