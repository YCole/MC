<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/month"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/month_name"
        style="@style/MonthView_MiniMonthLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:visibility="gone" />

    <include
        android:id="@+id/day_names"
        layout="@layout/full_month_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:visibility="gone" />

    <com.hct.calendar.ui.MonthWeekFrameLayout
        android:id="@+id/month_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false" >

        <com.hct.calendar.month.MonthViewPager
            android:visibility="gone"
            android:id="@+id/month_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" >
        </com.hct.calendar.month.MonthViewPager>

        <LinearLayout
            android:id="@+id/week_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFF"
            android:gravity="center"
            android:minHeight="42dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <ViewSwitcher
                android:id="@+id/week_switcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ViewSwitcher>
        </LinearLayout>

        <include
            android:id="@+id/agenda_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/hct_agenda_list"
            android:dividerHeight="1px" />
    </com.hct.calendar.ui.MonthWeekFrameLayout>

</LinearLayout>