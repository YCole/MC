<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calendar_background_color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding03"
                android:background="@color/color03_transparency14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:background="@color/calendar_background_color"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_vertical"
                            android:textColor="#e5000000"
                            android:includeFontPadding="false"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_jieri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:gravity="center|center_vertical"
                            android:textColor="#e5000000"
                            android:includeFontPadding="false"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/calendar_background_color"
                        android:divider="@android:color/darker_gray"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_acient_month_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:includeFontPadding="false"
                            android:textColor="#e5000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_almanac_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:includeFontPadding="false"
                            android:textColor="#e5000000"
                            android:textSize="22sp" />

                        <Button
                            android:id="@+id/btn_xoing_ji"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height07"
                            android:minWidth="88dp"
                            android:gravity="center"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="15dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:elevation="2dp"
                            android:text="@string/huangli_shi_cheng_ji_xiong"
                            android:textSize ="@dimen/font_size03"
                            android:textColor="@color/color06_transparency13" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding03"
                        android:background="@color/color03_transparency14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/calendar_background_color"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="24dp"
                                android:background="@drawable/huangli_yi_background"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/huangli_yi"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_yi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="18dp"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="6dp"
                                android:text="@string/yi"
                                android:textColor="#e5000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="24dp"
                                android:background="@drawable/huangli_ji_background"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/huangli_ji"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_ji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="18dp"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="6dp"
                                android:text="@string/ji"
                                android:textColor="#e5000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding03"
                        android:background="@color/color03_transparency14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/calendar_background_color"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:text="@string/huangli_tai_sheng"
                                    android:textColor="#e5000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_tai_sheng"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"
                                    android:lines="2"
                                    android:lineSpacingExtra="4dp"
                                    android:text="@string/taishen"
                                    android:textColor="#8a000000"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/huangli_xing_xiu"
                                    android:textColor="#e5000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_xing_xiu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="24dp"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/xingxu"
                                    android:textColor="#8a000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/huangli_peng_zu_bai_ji"
                                android:textColor="#e5000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_peng_zu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="@string/pengzhu"
                                android:textColor="#8a000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:text="@string/huangli_chong_sha"
                                    android:textColor="#e5000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_chong_sha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"
                                    android:lines="2"
                                    android:lineSpacingExtra="4dp"
                                    android:text="@string/chong"
                                    android:textColor="#8a000000"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/huangli_wu_xing"
                                    android:textColor="#e5000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_wu_xing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="24dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/wuxing"
                                    android:textColor="#8a000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding03"
                    android:background="@color/color03_transparency14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/info_circle"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/huangli_provider"
                        android:textColor="@color/color06_transparency06"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>